#include<iostream.h>
#include<stdio.h>

typedef struct
{
  int roll;
  char name[20];
} STUDENT;

int main()
{
  int n;
  printf("Enter number of student details you want to input\n");
  scanf("%d", &n);
  STUDENT s[100];
  printf("Enter roll and name of student respectively\n");
  int i;
  for (i=0; i<n; i++)
    {
      scanf("%d %s", &s[i].roll, &s[i].name);
    }
  STUDENT *ptrBeg = s;
  STUDENT *ptrLast = s + n - 1;
  STUDENT *trav1;
  STUDENT *trav2;
  STUDENT temp;
  for (; ptrBeg<ptrLast; ptrBeg++)
    {
      trav1 = ptrBeg;
      for (trav2 = ptrBeg + 1; trav2<=ptrLast; trav2++)
	{
	  if (s[trav1].roll > s[trav2].roll)
	    {
	      trav1 = trav2;
	    }
	  temp = s[trav1];
	  s[trav1] = s[trav2];
	  s[trav2] = temp;
	}
    }
  printf("Sorted array is\n");
  for (i=0; i<n; i++)
    {
      printf("Roll : %d Name : %s\n", &s[i].roll, &s[i].name);
    }
  return 0;
}
